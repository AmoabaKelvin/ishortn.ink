{
  "functions": {
    "app/api/**/*": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/domain-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/cleanup-teams",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/cleanup-analytics",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/cron/cleanup-expired",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/cleanup-accounts",
      "schedule": "0 1 * * *"
    }
  ]
}
